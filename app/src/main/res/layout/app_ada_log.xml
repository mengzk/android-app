<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_item_log_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/app_item_log_method"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:textColor="#232323"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/app_item_log_status"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="#00B42A"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_item_log_duration"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:textColor="#232323"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_item_log_url"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ellipsize="middle"
            android:lineHeight="20dp"
            android:maxLines="2"
            android:textColor="#232323"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/app_item_log_result"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#676767"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>