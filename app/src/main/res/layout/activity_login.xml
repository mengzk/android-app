<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/pageBg">
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_24"
            android:paddingVertical="@dimen/dimen_24"
            android:background="@drawable/bg_pop">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_24">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/login_title"
                    android:textColor="@color/title"
                    android:textSize="@dimen/size_24"
                    android:textStyle="bold" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12"
                android:background="@drawable/input_line2"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dimen_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name"
                    android:textColor="@color/label"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/login_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="end"
                    android:hint="@string/hint"
                    android:text="Test"
                    android:maxLength="12"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold"
                    android:textColor="@color/title"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_edit_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12"
                android:background="@drawable/input_line2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dimen_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_age"
                    android:textColor="@color/label"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/login_edit_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:hint="@string/select"
                    android:text="1990-01-01"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold"
                    android:textColor="@color/title"
                    />

                <ImageView
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_18"
                    android:src="@drawable/right_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12"
                android:background="@drawable/input_line2"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dimen_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_height"
                    android:textColor="@color/label"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/login_edit_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="end"
                    android:hint="@string/hint"
                    android:text="178"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textSize="@dimen/size_18"
                    android:textColor="@color/title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4"
                    android:text="@string/unit_cm"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12"
                android:background="@drawable/input_line2"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dimen_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_kg"
                    android:textColor="@color/label"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/login_edit_kg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/hint"
                    android:text="72"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/size_18"
                    android:textColor="@color/title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4"
                    android:text="@string/unit_kg"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12"
                android:background="@drawable/input_line2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dimen_4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_sex"
                    android:textColor="@color/label"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/login_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/login_sex_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/man"
                        android:textColor="@color/title"
                        android:textSize="@dimen/size_18"
                        android:textStyle="bold" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_32"
                        android:text="@string/woman"
                        android:textSize="@dimen/size_18"
                        android:textStyle="bold"
                        android:textColor="@color/title"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12"
                android:background="@drawable/input_line2"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dimen_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"
                    android:textColor="@color/label"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/login_edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:hint="@string/hint"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:text="17628838323"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold"
                    android:textColor="@color/title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12"
                android:background="@drawable/input_line2"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dimen_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auth_code"
                    android:textColor="@color/label"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/login_edit_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="end"
                    android:hint="@string/hint"
                    android:text="123456"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="@dimen/size_18"
                    android:textStyle="bold"
                    android:textColor="@color/title"/>
                <Button
                    android:id="@+id/login_get_code"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="@dimen/dimen_43"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:padding="0dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_13"
                    android:text="@string/get_code"/>
            </LinearLayout>

            <Button
                android:id="@+id/login_edit_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_36"
                android:paddingVertical="@dimen/dimen_14"
                android:text="@string/commit2"
                android:textSize="@dimen/size_22" />
        </LinearLayout>

    </LinearLayout>

</layout>