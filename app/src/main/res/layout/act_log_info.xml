<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical">

    <TextView
        android:id="@+id/app_log_info_url"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="url"
        android:textColor="#232323"
        android:textSize="16sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_log_info_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="403 | GET | 200ms"
                android:textColor="#00B42A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--            <TextView-->
            <!--                android:id="@+id/app_log_info_url"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginVertical="12dp"-->
            <!--                android:text="url:"-->
            <!--                android:textColor="#232323"-->
            <!--                android:textSize="14sp"-->
            <!--                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/app_log_info_params"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="params:"
                android:textColor="#232323"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/app_log_info_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="header:"
                android:textColor="#676767"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/app_log_info_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="result:"
                android:textColor="#232323"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>