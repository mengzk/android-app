    <!--    </style>-->

    <style name="EditTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomProgressH" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:mirrorForRtl">true</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:progressDrawable">@mipmap/ic_launcher</item>
        <item name="android:indeterminateDrawable">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomProgressV">
        <item name="android:mirrorForRtl">true</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:progressDrawable">@mipmap/ic_launcher</item>
        <item name="android:indeterminateDrawable">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/bg_pop</item>
        <item name="android:datePickerStyle">@style/CustomDatePicker</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomButton</item>
        <item name="android:buttonBarStyle">@style/CustomButtonBar</item>
    </style>

    <style name="CustomDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">?attr/colorPrimary</item>
        <item name="android:calendarTextColor">?attr/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:layout_weight">1</item>-->
    </style>
    <style name="CustomButtonBar" parent="Widget.AppCompat.ButtonBar">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/divider</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>